<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.sebas_pc.formularioandroid.view.NewPostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="114dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/black"
                        android:text="DATA/HORA FORMULARI"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@android:color/black"
                        android:text="IDENTIFICACIÃ“ MOBIL: "
                        android:textColor="@android:color/background_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="11dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:id="@+id/identificacio"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="13dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@layout/borderone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="326dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="16dp"
                            android:text="DNI: "
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="3dp"
                            android:text="NOM:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="1dp"
                            android:text="COGNOM:"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_persondni"
                            android:layout_width="137dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:inputType="textCapCharacters"
                            android:maxLength="9" />

                        <EditText
                            android:id="@+id/et_personName"
                            android:layout_width="137dp"
                            android:layout_height="40dp"

                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/et_personlastName"
                            android:layout_width="137dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="1dp"
                            android:inputType="textPersonName" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- -->

            <LinearLayout
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@layout/borderone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="326dp"
                    android:layout_height="360dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView160"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="50dp"
                            android:text="DATA INICI: "
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_name0"
                            android:layout_width="153dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="100dp"
                            android:text="DATA FINAL:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView140"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="57dp"
                            android:text="NUM HORES:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView1400"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="40dp"
                            android:text="DESTINATARI:"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <DatePicker
                            android:id="@+id/datePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="118dp"
                            android:layout_marginLeft="-20dp"
                            android:calendarViewShown="false"
                            android:datePickerMode="spinner"
                            android:scaleX="0.8"
                            android:scaleY="0.8" />

                        <DatePicker
                            android:id="@+id/datePicker2"
                            android:layout_width="wrap_content"
                            android:layout_height="118dp"
                            android:layout_marginLeft="-20dp"
                            android:calendarViewShown="false"
                            android:datePickerMode="spinner"
                            android:scaleX="0.8"
                            android:scaleY="0.8" />

                        <EditText
                            android:id="@+id/hores"
                            android:layout_width="137dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="0dp"
                            android:inputType="numberDecimal" />

                        <EditText
                            android:id="@+id/dest"
                            android:layout_width="137dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="22dp"
                            android:inputType="textPersonName" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="326dp"
                android:layout_height="330dp"
                android:layout_marginTop="20dp"
                android:background="@layout/borderone"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/ambit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/familiartv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:text="Familiar:" />

                    <EditText
                        android:id="@+id/familiar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="Nom"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/tipus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp" />

                    <Spinner
                        android:id="@+id/finalT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextDesc"
                        android:layout_width="304dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="DescripciÃ³"
                        android:inputType="textMultiLine" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="335dp"
                android:layout_height="205dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:background="@layout/borderone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView190"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:text="OBSERVACIONS:"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/editTextObs"
                        android:layout_width="312dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="15dp"
                        android:inputType="textMultiLine" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="322dp"
                    android:layout_height="500dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/button_camera"
                        android:layout_width="60dp"
                        android:layout_height="51dp"
                        android:background="@layout/borderone"
                        app:srcCompat="@android:drawable/ic_menu_camera" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@layout/borderone"
                        app:srcCompat="@android:drawable/ic_input_add" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:text="Guardar"
                android:textColor="@android:color/background_light" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
